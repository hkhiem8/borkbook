<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Dogs</title>
</head>
<body>
    <h1>My Dogs</h1>

    <ul>
        <% dogs.forEach(dog => { %>
            <li>
                <a href="/dogs/<%= dog._id %>"><%= dog.name %></a>
                <form action="/dogs/<%= dog._id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>

    <a href="/dogs/new">Add New Dog</a>
</body>
</html>
